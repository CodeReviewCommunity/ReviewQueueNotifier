{
  "manifest_version": 2,

  "name": "Review Queue Notifier",
  "description": "Alerts you to new reviews on your favorite Stack Exchange site",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}